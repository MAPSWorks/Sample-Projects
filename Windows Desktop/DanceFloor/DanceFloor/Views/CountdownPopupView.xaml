<UserControl x:Class="DanceFloor.Views.CountdownPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Width="500" Height="190"
             Foreground="White"
             FontFamily="Calibri"             
             Background="Transparent">
    <Border CornerRadius="10" Background="#EE000000" BorderThickness="1" BorderBrush="Black">
        <StackPanel>
            <TextBlock Text="{Binding Message}" FontSize="35" HorizontalAlignment="Center" Margin="0,30,0,30" />
            <TextBlock Text="{Binding TimeLeft}" Foreground="Orange" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,30" />
        </StackPanel>       
    </Border>
</UserControl>
